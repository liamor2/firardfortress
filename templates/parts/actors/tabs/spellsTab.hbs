<section class="sheet-tab tab" data-tab="spells">
  <div class="spell-tab">
    <div class="spell-table">
      <label class="spell-label container-label">
        <p>{{localize "FI.System.Spell"}}</p>
      </label>
      <table class="spell-table">
        <tr>
          <th class="image">{{localize "FI.Spell.Image"}}</th>
          <th>{{localize "FI.Spell.Name"}}</th>
          <th class="medium">{{localize "FI.Spell.Cost"}}</th>
          <th class="medium">{{localize "FI.Spell.Stat"}}</th>
          <th class="small">{{localize "FI.Spell.Roll"}}</th>
          <th class="small">{{localize "FI.System.Move"}}</th>
          <th class="small">{{localize "FI.System.Delete"}}</th>
        </tr>
        {{#each items as |spell index|}}
          {{#if spell.system.isSpell}}
            <tr>
              <td class="edit-item" data-id="{{spell._id}}">
                <img src="{{spell.img}}" alt="{{spell.system.name}}" />
              </td>
              <td class="edit-item" data-id="{{spell._id}}">
                <p>{{spell.system.name}}</p>
              </td>
              <td class="edit-item" data-id="{{spell._id}}">
                <p>{{spell.system.mpCost}} {{localize "FI.System.MP"}}</p>
              </td>
              <td class="edit-item" data-id="{{spell._id}}">
                <p>{{localize (concat "FI.Stat." spell.system.stat)}}</p>
              </td>
              <td>
                <a
                  class="item-roll rollable"
                  title="{{localize 'FI.System.Roll'}}"
                  data-id="{{spell._id}}"
                  data-label="{{spell.name}}"
                  data-type="{{spell.system.stat}}"
                  data-rollType="Spell"
                  data-roll="{{spell.system.stat}}"
                ><i class="fa-duotone fa-dice-d20"></i></a>
              </td>
              <td>
                <a
                  class="move small"
                  data-type="up"
                  data-move="Spell"
                  data-id="{{spell._id}}"
                ><i class="fa-duotone fa-arrow-up"></i></a>
                <a
                  class="move small"
                  data-type="down"
                  data-move="Spell"
                  data-id="{{spell._id}}"
                ><i class="fa-duotone fa-arrow-down"></i></a>
              </td>
              <td>
                <a
                  class="delete small"
                  data-delete="Spell"
                  data-id="{{spell._id}}"
                ><i class="fa-duotone fa-trash"></i></a>
              </td>
            </tr>
          {{/if}}
        {{/each}}
        <tr>
          <td class="add-item" colspan="6">
            <button class="add" data-add="Spell"><i
                class="fa-duotone fa-plus"
              ></i></button>
          </td>
        </tr>
      </table>
    </div>

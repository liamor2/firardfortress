                                    <td class="edit-item" data-id="{{transformation._id}}">
                                        <div>
                                            <p>{{transformation.system.mpCost}} {{localize "FI.System.MP"}}</p>
                                            <p>{{transformation.system.spCost}} {{localize "FI.System.SP"}}</p>
                                            <p>{{transformation.system.hpCost}} {{localize "FI.System.HP"}}</p>
                                            {{#if transformation.system.otherCost}}
                                                <p>+</p>
                                            {{/if}}
                                        </div>
                                    </td>
                                    <td class="edit-item" data-id="{{transformation._id}}">
                                        <p>{{localize (concat "FI.Stat." transformation.system.stat)}}</p>
                                    </td>
                                    <td>
                                        <a class="move small" data-type="up" data-move="Transformation" data-id="{{transformation._id}}"><i class="fa-duotone fa-arrow-up"></i></a>
                                        <a class="move small" data-type="down" data-move="Transformation" data-id="{{transformation._id}}"><i class="fa-duotone fa-arrow-down"></i></a>
                                    </td>
                                    <td>
                                        <a class="delete" data-delete="Transformation" data-id="{{transformation._id}}"><i class="fa-duotone fa-trash"></i></a>
                                    </td>
                                </tr>
                            {{/if}}
                        {{/each}}
                        <tr>
                            <td class="add-item" colspan="6">
                                <button class="add" data-add="Transformation"><i class="fa-duotone fa-plus"></i></button>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="passif-table">
                    <label class="passif-label container-label">
                        <p>{{localize "FI.System.Passif"}}</p>
                    </label>
                    <table class="passif-table">
                        <tr>
                            <th class="image">{{localize "FI.Passif.Image"}}</th>
                            <th>{{localize "FI.Passif.Name"}}</th>
                            <th class="small">{{localize "FI.System.Move"}}</th>
                            <th class="small">{{localize "FI.System.Delete"}}</th>
                        </tr>
                        {{#each items as |passif index|}}
                            {{#if passif.system.isPassif}}
                                <tr>
                                    <td class="edit-item" data-id="{{passif._id}}">
                                        <img src="{{passif.img}}" alt="{{passif.system.name}}"/>
                                    </td>
                                    <td class="edit-item" data-id="{{passif._id}}">
                                        <p>{{passif.system.name}}</p>
                                    </td>
                                    <td>
                                        <a class="move small" data-type="up" data-move="Passif" data-id="{{passif._id}}"><i class="fa-duotone fa-arrow-up"></i></a>
                                        <a class="move small" data-type="down" data-move="Passif" data-id="{{passif._id}}"><i class="fa-duotone fa-arrow-down"></i></a>
                                    </td>
                                    <td>
                                        <a class="delete small" data-delete="Passif" data-id="{{passif._id}}"><i class="fa-duotone fa-trash"></i></a>
                                    </td>
                                </tr>
                            {{/if}}
                        {{/each}}
                        <tr>
                            <td class="add-item" colspan="6">
                                <button class="add" data-add="Passif"><i class="fa-duotone fa-plus"></i></button>
                            </td>
                        </tr>
                    </table>
                </div>
                <script>
                    $("td.edit-item").hover(
                        function() {
                            $(this).parent().css("background-color", "rgba(68, 68, 68, 0.122)");
                        },
                        function() {
                            $(this).parent().css("background-color", "");
                        }
                    );
                </script>
            </div>
        </section>

        {{!-- Notes Tab --}}
        <section class="sheet-tab tab" data-tab="notes">
            <div class="description">
                <div class="description-language">
                    <table>
                        <tr>
                            <th>{{localize "FI.Description.Language"}}</th>
                            <th class="small">{{localize "FI.Description.Speaking"}}</th>
                            <th class="small">{{localize "FI.Description.Reading"}}</th>
                            <th class="small">{{localize "FI.Description.Writing"}}</th>
                            <th class="small">{{localize "FI.System.Move"}}</th>
                            <th class="small">{{localize "FI.System.Delete"}}</th>
                        </tr>
                            {{#each items as |language index|}}
                                {{#if language.system.isLanguage}}
                                    <tr>
                                        <td data-id="{{language._id}}">
                                            <input class="item-input" type="text" name="system.languages.{{index}}.name" value="{{language.system.name}}" list="languageList" data-id="{{language._id}}" data-field="system.name"/>
                                        </td>
                                        <td>
                                            {{#if language.system.speaking}}
                                                <i class="fa-duotone fa-check item-checkbox" data-id="{{language._id}}" data-type="speaking"></i>
                                            {{else}}
                                                <i class="fa-duotone fa-times item-checkbox" data-id="{{language._id}}" data-type="speaking"></i>
                                            {{/if}}
                                        </td>
                                        <td>
                                            {{#if language.system.reading}}
                                                <i class="fa-duotone fa-check item-checkbox" data-id="{{language._id}}" data-type="reading"></i>
                                            {{else}}
                                                <i class="fa-duotone fa-times item-checkbox" data-id="{{language._id}}" data-type="reading"></i>
                                            {{/if}}
                                        </td>
                                        <td>
                                            {{#if language.system.writing}}
                                                <i class="fa-duotone fa-check item-checkbox" data-id="{{language._id}}" data-type="writing"></i>
                                            {{else}}
                                                <i class="fa-duotone fa-times item-checkbox" data-id="{{language._id}}" data-type="writing"></i>
                                            {{/if}}
                                        </td>
                                        <td>
                                            <a class="move small" data-type="up" data-move="Language" data-id="{{language._id}}"><i class="fa-duotone fa-arrow-up"></i></a>
                                            <a class="move small" data-type="down" data-move="Language" data-id="{{language._id}}"><i class="fa-duotone fa-arrow-down"></i></a>
                                        </td>
                                        <td>
                                            <a class="delete small" data-delete="Language" data-id="{{language._id}}"><i class="fa-duotone fa-trash"></i></a>
                                        </td>
                                    </tr>
                                {{/if}}
                            {{/each}}
                    </table>
                    <datalist id="languageList">
                        <script>
                            if (typeof game.settings.get("polyglot", "customLanguages") !== "undefined") {
                                var customLanguageList = game.settings.get("polyglot", "customLanguages").split(",");
                            }
                            for (let i = 0; i < customLanguageList.length; i++) {
                                var option = document.createElement("option");
                                option.value = customLanguageList[i];
                                document.getElementById("languageList").appendChild(option);
                            }
                        </script>
                    </datalist>
                    <button class="add language-add" data-add="Language"><i class="fa-duotone fa-plus"></i></button>
                </div>
                <div class="description-alignment">
                    <label>
                        <p>{{localize "FI.Description.Alignment"}}</p>
                    </label>
                    <div id="marker-bounds">
                        <div id="marker-container">
                            <p id="lawful">{{localize "FI.Description.Lawful"}}</p>
                            <p id="chaotic">{{localize "FI.Description.Chaotic"}}</p>
                            <p id="good">{{localize "FI.Description.Good"}}</p>
                            <p id="evil">{{localize "FI.Description.Evil"}}</p>
                            <div id="marker"></div>
                        </div>
                    </div>
                </div>
                <div class="description-left">
                    <div class="description-field description-biography">
                        <label>{{localize "FI.Description.Biography"}}</label>
                        {{editor
                            data.system.biography
                            target="system.biography"
                            button=true
                            editable=editable
                        }}
                    </div>
                    <div class="description-field description-appearance">
                        <label>{{localize "FI.Description.Appearance"}}</label>
                        {{editor
                            data.system.appearance
                            target="system.appearance"
                            button=true
                            editable=editable
                        }}
                    </div>
                </div>
                <div class="description-field description-right">
                    <div class="description-personality">
                        <label>{{localize "FI.Description.Personality"}}</label>
                        {{editor
                            data.system.personality
                            target="system.personality"
                            button=true
                            editable=editable
                        }}
                    </div>
                    <div class="description-field description-background">
                        <label>{{localize "FI.Description.Background"}}</label>
                        {{editor
                            data.system.background
                            target="system.background"
                            button=true
                            editable=editable
                        }}
                    </div>
                </div>
                <div class="description-field description-notes">
                    <label>{{localize "FI.Description.Notes"}}</label>
                    {{editor
                        data.system.notes
                        target="system.notes"
                        button=true
                        editable=editable
                    }}
                </div>
            </div>
        </section>
    </main>

    {{!-- Sheet Footer --}}
    <footer class="sheet-footer footer">
        <span class="sheet-footer-right">
            <label>{{localize "FI.System.DisplayAdvancedRoll"}}</label>
            <input type="checkbox" name="system.displayAdvancedRoll" {{#if data.system.displayAdvancedRoll}}checked{{/if}}/>
        </span>
    </footer>
</div>
</form>
<form class="{{cssClass}} actor-sheet PC-sheet" id="smooth-wrapper" autocomplete="off">
  <div id="smooth-content">
    {{!-- Sheet Header --}}
    <header class="header">
      <div class="header-left">
        {{> "systems/firardfortress/templates/parts/actors/header/subStat.hbs" data=data}}
        {{> "systems/firardfortress/templates/parts/actors/header/attributes.hbs" data=data}}
      </div>
      {{> "systems/firardfortress/templates/parts/actors/header/mainStat.hbs" data=data}}
    </header>

    {{!-- Sheet Nav --}}
    {{> "systems/firardfortress/templates/parts/actors/header/navigation.hbs" data=data}}

    {{!-- Sheet Body --}}
    <main class="sheet-body">

      {{!-- Main Tab --}}
      {{> "systems/firardfortress/templates/parts/actors/tabs/mainTab.hbs" data=data}}

      {{!-- Proficiencies Tab --}}
      {{> "systems/firardfortress/templates/parts/actors/tabs/proficienciesTab.hbs" data=data}}

      {{!-- Spells Tab --}}
      {{> "systems/firardfortress/templates/parts/actors/tabs/spellsTab.hbs" data=data}}

      {{!-- Notes Tab --}}
      {{> "systems/firardfortress/templates/parts/actors/tabs/notesTab.hbs" data=data}}
    </main>

    {{!-- Sheet Footer --}}
    {{!-- <footer class="sheet-footer footer">
      {{> "systems/firardfortress/templates/parts/actors/footer/advancedRoll.hbs" data=data}}
    </footer> --}}

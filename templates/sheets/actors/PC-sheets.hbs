                                                <i class="fa-duotone fa-check item-checkbox" data-id="{{language._id}}" data-type="reading"></i>
                                            {{else}}
                                                <i class="fa-duotone fa-times item-checkbox" data-id="{{language._id}}" data-type="reading"></i>
                                            {{/if}}
                                        </td>
                                        <td>

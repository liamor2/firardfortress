<form class="{{cssClass}} actor-sheet PC-sheet" id="smooth-wrapper" autocomplete="off">
    <script>
        var inputs = document.querySelectorAll('input:not([type="checkbox"])');
        inputs.forEach(input => {
            input.setAttribute('onkeydown', 'if (event.keyCode === 13) { this.blur(); }');
        });
    </script>
<div id="smooth-content">
    {{!-- Sheet Header --}}
    <header class="header">
        <div class="header-left">
            {{> "systems/firardfortressdev/templates/parts/actors/header/subStat.hbs" data=data}}
            {{> "systems/firardfortressdev/templates/parts/actors/header/attributes.hbs" data=data}}
        </div>
    </header>

    {{!-- Sheet Nav --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <ul>
            <li><a class="item" data-tab="main">{{localize "FI.System.Main"}}</a></li>
            <li><a class="item" data-tab="proficiencies">{{localize "FI.System.Proficiencies"}}</a></li>
            <li><a class="item" data-tab="spells">{{localize "FI.System.Spells"}}</a></li>
            <li><a class="item" data-tab="notes">{{localize "FI.System.Notes"}}</a></li>
        </ul>

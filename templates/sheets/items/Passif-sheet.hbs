<form class="{{cssClass}} item-sheet passif" autocomplete="off">
  <script>
      if (typeof inputs === 'undefined') {
        var inputs = document.querySelectorAll('input:not([type="checkbox"])');
      }
      inputs.forEach(input => {
        input.setAttribute('onkeydown', 'if (event.keyCode === 13) { this.blur(); }');
      });
    </script>
  <header class="sheet-header">
    {{> "systems/firardfortressdev/templates/parts/items/header.hbs"}}
  </header>

  {{!-- Sheet Body --}}
  <main class="sheet-body">
    <table class="sheet-main">
      {{> "systems/firardfortressdev/templates/parts/items/typeInput.hbs"
      cssClass="passifType"
      labelKey="FI.PassifSheet.PassifType"
      divClass="passifTypeDiv"
      iconClass="fa-shield"
      inputName="system.passifType"
      inputValue= data.system.passifType
      datalistId="passifTypes"
      tooltipKey="FI.PassifSheet.PassifType"
      localizePrefix="FI.PassifType"
      fallbackLocalizationKey="FI.PassifType.Label.Custom" }}
    </table>
    <section class="sheet-description">
      {{> "systems/firardfortressdev/templates/parts/items/description.hbs"}}
    </section>
  </main>
</form>